<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/video_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:background="@drawable/nianhui_bg"
        android:layout_width="match_parent"
        android:id="@+id/dabg"
        android:scaleType="fitXY"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:layout_marginRight="40dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/riqi"
            android:textColor="@color/write"
            android:textSize="50sp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/xiaoshi"
            android:layout_marginTop="10dp"
            android:textColor="@color/write"
            android:textSize="56sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/top_rl"
        android:layout_marginTop="86dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/t1"
                android:textColor="@color/write"
                android:textSize="110sp"
                android:gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/t2"
                android:textColor="@color/write"
                android:textSize="70sp"
                android:gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>



    <LinearLayout
        android:layout_below="@+id/top_rl"
        android:orientation="vertical"
        android:layout_marginTop="220dp"
        android:id="@+id/dahuang"
        android:visibility="gone"
        android:layout_marginLeft="70dp"
        android:background="@color/blake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/dddd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="已到场人数:"
                android:textSize="50sp"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/write"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="70sp"
                android:id="@+id/y1"
                android:paddingLeft="10dp"
                android:background="@drawable/shuzi_bg"
                android:textColor="@color/write"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="未到场人数:"
                android:textSize="50sp"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/write"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="70sp"
                android:id="@+id/n1"
                android:paddingLeft="10dp"
                android:background="@drawable/shuzi_bg"
                android:textColor="@color/write"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:minHeight="400dp"
        android:id="@+id/ff222"
        android:layout_below="@+id/top_rl"
        android:layout_marginTop="366dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:id="@+id/zizizi"
            android:textSize="140sp"
            android:layout_marginTop="40dp"
            android:textColor="@color/write"
            android:text="签 到 处"
            android:layout_height="280dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:padding="40dp"
            android:scrollbars="vertical"
            android:textSize="36sp"
            android:visibility="gone"
            android:textColor="@color/write"
            android:id="@+id/liucheng"
            android:minHeight="380dp"
            android:background="@drawable/zhongkong"
            android:layout_height="wrap_content" />

        <TextView
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:paddingRight="10dp"
            android:visibility="gone"
            android:paddingBottom="8dp"
            android:background="@drawable/zidonghuoqu_bai"
            android:textColor="@color/blake"
            android:textSize="26sp"
            android:text="会议流程"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <LinearLayout
        android:layout_marginLeft="110dp"
        android:orientation="vertical"
        android:layout_marginTop="240dp"
        android:layout_below="@+id/ff222"
        android:background="@drawable/zidonghuoqu_bai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_width="100dp"
            android:id="@+id/erweima"
            android:layout_height="100dp" />

        <TextView
            android:text="扫码签到"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginTop="-14dp"
            android:layout_marginBottom="14dp"
            android:textColor="@color/blake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_marginTop="-36dp"
        android:layout_below="@+id/top_rl"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <!--弹窗-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView2"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:layout_below="@+id/recyclerView"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="-36dp"
        android:background="@color/touming22"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!--弹窗-->

    <Button
        android:layout_width="80dp"
        android:id="@+id/dddk"
        android:background="@color/img_full_opaque"
        android:layout_height="80dp" />

    <TextView
        android:background="@color/transparent"
        android:layout_width="80dp"
        android:id="@+id/bgbg"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="80dp" />

    <TextView
        android:background="@drawable/zidonghuoqu8"
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:id="@+id/wangluo2"
        android:visibility="gone"
        android:text="网络已断开连接,请检查网络"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:padding="12dp"
        android:layout_height="wrap_content" />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/wangluo"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:lottie_fileName="wf.json"
        app:lottie_loop="true"
        app:lottie_autoPlay="true" />



</RelativeLayout>